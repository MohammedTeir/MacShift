<!-- File: res/layout/activity_main.xml -->
<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- MAC info display -->
    <include
        layout="@layout/view_mac_info_display"
        android:id="@+id/macInfoDisplay" />

    <!-- Custom MAC input -->
    <include
        layout="@layout/view_custom_mac_input"
        android:id="@+id/customMacInput" />

    <!-- Action buttons -->
    <include
        layout="@layout/view_mac_action_buttons"
        android:id="@+id/macActionButtons" />

    <!-- Auto-spoof on boot switch -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/autoBootSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Spoof MAC on Boot" />

</LinearLayout>

</ScrollView>